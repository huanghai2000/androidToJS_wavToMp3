<?xml version="1.0" encoding="utf-8"?>
<com.king.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.king.percent.support.PercentRelativeLayout
        android:id="@+id/body_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/shape_layout2_bg"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent= "42%w"
            app:layout_heightPercent="56%w"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/img_content"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/text_size_16"
            android:text="666"
            android:textColor="@color/_505050"/>

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="match_parent"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:text="666"
            android:textColor="@color/_909291"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:text="人教版"
            android:gravity="center|right"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/img_content" />

    </com.king.percent.support.PercentRelativeLayout>

    <ImageView
        android:id="@+id/img_del"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="fitXY"
        android:background="@drawable/img_del"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
</com.king.percent.support.PercentRelativeLayout>
